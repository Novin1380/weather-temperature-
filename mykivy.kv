Screen:
    location: location
    temperature: temperature
    weather : weather
    humidity: humidity
    weather_Image : weather_Image
    wind : wind
    city_name: city_name
    MDCard:
        orientation: "vertical"
        padding: "8dp"
        size_hint: None, None
        size: "340dp", "590dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        MDFloatLayout:
            md_bg_color : 1,1,1,1
            Image :
                source :"files/loc.png"
                size_hint : 0.1 , 0.1
                pos_hint : {"center_x" : 0.5, "center_y" : 0.95}
            MDLabel :
                id:location
                text:""
                pos_hint : {"center_x" : 0.5, "center_y" : 0.90}
                halign : "center"
                font_size : "20sp"
                font_name : "SHOWG.TTF"
            Image:
                id:weather_Image
                pos_hint: {"center_x": 0.5 , "center_y" : 0.83}
            MDLabel :
                id:temperature
                text:""
                markup: True
                pos_hint : {"center_x" : 0.5, "center_y" : 0.71}
                halign : "center"
                font_size : "60sp"
                font_name : "CALIST.TTF"
            MDLabel :
                id:weather
                text:""
                markup: True
                pos_hint : {"center_x" : 0.5, "center_y" : 0.61}
                halign : "center"
                font_size : "20sp"
                font_name : "CALISTB.TTF"
            MDFloatLayout:
                id:humidity
                pos_hint: {"center_x" : 0.25, "center_y" :0.4} 
                size_hint : .22,.1
                Image :
                    source :"files/hum.png"
                    pos_hint : {"center_x" : .1, "center_y" : 0.5}
                MDLabel :
                    id:humidity
                    text:""
                    pos_hint : {"center_x" : 0.6, "center_y" : 0.55}
                    halign : "center"
                    font_size : "18sp"
                    font_name : "CALISTB.TTF"
            MDFloatLayout:
                id:wind
                pos_hint: {"center_x" : 0.75, "center_y" :0.4} 
                size_hint : .22,.1
                Image :
                    source :"files/wind.png"
                    pos_hint : {"center_x" : .7, "center_y" : 0.5}
                MDLabel :
                    id:wind
                    text:""
                    pos_hint : {"center_x" : 0.1, "center_y" : 0.55}
                    halign : "center"
                    font_size : "18sp"
                    font_name : "CALISTB.TTF"
        MDFloatLayout:
            size_hint_y :0.3
            canvas:
                Color: 
                    rgb : rgba(135,206,250,1)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [10,10,0,0]
            MDFloatLayout:
                size_hint :.9,.3
                pos_hint : {"center_x" :0.5 , "center_y" :0.7}
                canvas :
                    Color :
                        rgb: rgba(211,211,211,1)
                    RoundedRectangle:
                        size: self.size
                        pos : self.pos
                        radius: [6]
                TextInput:
                    id:city_name
                    hint_text :"enter name of city"
                    size_hint: 1 , None
                    pos_hint : {"center_x" :0.5 , "center_y" :0.5}
                    height : self.minimum_height
                    hint_text_color: 0,0,0,1
                    foreground_color : 0,0,0,1
                    bg_color :1,1,1,0
                    font_size: "20sp"
                    font_name : "swissk.ttf"
                    cursor_color :0,0,0,1
            Button:
                text: "Submit"
                font_name : "CALISTI.TTF"
                font_size: "20sp"
                bg_color :1,1,1,0.5
                pos_hint : {"x" :0.1 , "center_y" :0.3}
                size_hint:.45,.3
                on_release : app.search_weather()
            Button:
                text: "About"
                font_name : "CALISTI.TTF"
                font_size: "20sp"
                bg_color :1,1,1,0.5
                pos_hint : {"x" :0.6 , "center_y" :0.3}
                size_hint:.35,.3
                on_release : app.show()

